@{ 
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
<div>
    <br />
    <br />
    <center>
        <table border="1px" width="50%">
            <tr> <td colspan="2" style="color:antiquewhite; font-size:x-large"> Admin Login </td></tr>
            <tr> <td>Email:</td> <td> <input name="ADMIN_EMAIL" type="text" /></td> </tr>
            <tr> <td>Password:</td> <td> <input name="ADMIN_PASSWORD" type="password" /> </td></tr>
            <tr><td style="color:red; font-size:large" colspan="2">@ViewBag.Message</td></tr>
            <tr> <td colspan="2"><input type="submit" value="Login" /></td> </tr>

        </table>

    </center>
</div>
 }